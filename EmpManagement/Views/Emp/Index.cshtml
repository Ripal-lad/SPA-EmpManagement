                <td>
                    @Html.DisplayFor(modelitem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Emailid)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.ContactNo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "", "", new { href = "javascript:void(0)", @class = "edit", id = item.ID })

                </td>
                <td> @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "delete", id = item.ID, name = item.Name })</td>
                <td>
                    @Html.ActionLink("Details", "", "", new { href = "javascript:void(0)", @class = "detail", id = item.ID, name = item.Name })
                </td>
            </tr>
        }
    </table>
</div>

